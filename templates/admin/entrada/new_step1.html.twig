{% extends "admin/bars.html.twig" %}
{% block title %}
    Paso 1 - Entradas
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('fonts/awesome/web-fonts-with-css/css/all.min.css') }}">
    {{ encore_entry_link_tags('select2') }}
    {{ encore_entry_link_tags('tinymce_config') }}
    <link rel="stylesheet" href="{{ asset('bundles/tinymce/ext/tinymce/skins/content/default/content.css') }}"
          integrity="sha256-AgL8yEmNfLtCpH+gYp9xqJwiDITGqcwAbI8tCfnY2lw=" crossorigin="anonymous"/>

{% endblock %}

{% block contenpage %}

    <h4>Asistente para crear nueva entrada - Paso 1</h4>

    <div class="form-container">
        {{ form_start(entradaForm) }}
        <div class="row">
            <div class="col-sm-12">
                {{ form_row(entradaForm.titulo) }}
            </div>
            <div class="col-sm-12">
                {{ form_row(entradaForm.contenido) }}
            </div>
            <div class="col-sm-12">
                {{ form_row(entradaForm.section) }}
            </div>
            <div class="col-sm-12">
                {{ form_row(entradaForm.autor) }}
            </div>

            {{ form_widget(entradaForm._token) }}

            {{ form_end(entradaForm, {'render_rest': true}) }}
            <button class="btn btn-primary btn--pill">{{ button_label|default('Guardar') }}</button>

        </div>

    </div>
    <a class="btn btn-info" href="{{ path('admin_entrada_index') }}">Cancelar e ir al Listado</a>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('select2') }}
    {{ parent() }}
    {{ encore_entry_script_tags('select2') }}

    <script src="{{ asset('bundles/tinymce/ext/tinymce/tinymce.min.js') }}"></script>
    <script src="{{ asset('bundles/tinymce/ext/tinymce-webcomponent.js') }}"></script>
    <script src="{{ asset('bundles/tinymce/ext/tinymce/plugins/help/js/i18n/keynav/es.js') }}"></script>
    <script src="{{ asset('bundles/tinymce/ext/tinymce/skins/content/default/content.js') }}"></script>

    {{ encore_entry_script_tags('tinymce_config') }}

{% endblock %}
{% block jslocal %}
{% endblock %}
